	<div class="colorlib-shop">
		<div class="container">
			<div class="row row-pb-lg">
				<div class="col-md-10 col-md-offset-1">
					<div class="product-detail-wrap">
						<div class="row">
							<div class="col-md-5">
								<div class="product-entry">
									<div class="product-img" style="background-image: url(<%=data.carImage1%>);">
											
									</div>
									<div class="thumb-nail">
											<a class="thumb-img" style="background-image: url(<%=data.carImage2%>);"></a>
											<a class="thumb-img" style="background-image: url(<%=data.carImage3%>);"></a>
											<a class="thumb-img" style="background-image: url(<%=data.carImage4%>);"></a>
									</div>
								</div>
							</div>
							<div class="col-md-7">
								<div class="desc">
									<h3><%=data.model%></h3>
									<p class="price">
										<span>Rs.<%=data.price%></span> 		
									</p>
                                    <div style="margin-bottom:1em; margin-top:1em;" class="text-center colorlib-heading">
                                        <h2 style="margin:0;"><span>Sellel Information</span></h2>
                                    </div>
									<p style="font-weight:bold; margin:0;">Name : <%=data.firstName%> <%=data.lastName%></p>
                                    <p style="font-weight:bold;margin:0;">Email Id : <%=data.emailId%></p>
                                    <p style="font-weight:bold;margin:0;">Phone No : <%=data.phoneNo%></p>
                                    <p style="font-weight:bold;margin:0;">Pincode : <%=data.pincode%></p>
                                    <div style="margin-bottom:1em; margin-top:1em;" class="text-center colorlib-heading">
                                        <h2 style="margin:0;"><span>Product Detail</span></h2>
                                    </div>
                                    <p style="font-weight:bold;margin:0;">Catergory : <%=data.catergory%></p>
                                    <p style="font-weight:bold;margin:0;">Make : <%=data.make%></p>
                                    <p style="font-weight:bold;margin:0;">Model : <%=data.model%></p>
                                    <p style="font-weight:bold;margin:0;">Year : <%=data.year%></p>
                                    <p style="font-weight:bold;margin:0;">Trim : <%=data.trim%></p>
                                    <p style="font-weight:bold;margin:0;">Kilometers Driven : <%=data.kilometersDriven%> KM</p>
                                    <p style="font-weight:bold;margin:0;">Vehicle RegNo : <%=data.vehicleRegNo%></p>

									<p style="margin-top:2em;"><a class="btn btn-primary btn-addtocart" data-toggle="modal" data-target=".bd-example-modal-lg"> Edit Details</a></p>
