    <!--model  -->
    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">EDIT CAR DETAILS</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/admin/edit_car_details/<%=data.id%>" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    
                    <div class="form-group">
                            <label for="carPic">Upload car pics</label>
                            <input id="carPic" name="myImage" type="file" class="form-control-file" multiple>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="fristname">First name</label>
                                    <input type="text" name="firstName" class="form-control" id="fristname" value="<%=data.firstName%>">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="lastname">Last name</label>
                                    <input type="text" name="lastName" class="form-control" id="lastname" value="<%=data.lastName%>">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="text" name="emailId" class="form-control" id="email" value="<%=data.emailId%>">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="phone">Phone number</label>
                                    <input type="number" name="phoneNo" class="form-control" id="phone" value="<%=data.phoneNo%>">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="catergory">Catergory</label>
                                    <input type="text" name="catergory" class="form-control" id="catergory" value="<%=data.catergory%>">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="make">Make</label>
                                    <input type="text" name="make" class="form-control" id="make" value="<%=data.make%>">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="model">Model</label>
                                    <input type="text" name="model" class="form-control" id="model" value="<%=data.model%>">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="year">Year</label>
                                    <input type="text" name="year" class="form-control" id="year" value="<%=data.year%>">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="trim">Trim</label>
                                    <input type="text" name="trim" class="form-control" id="trim" value="<%=data.trim%>">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="pincode">Pincode</label>
                                    <input type="number" name="pincode" class="form-control" id="pincode" value="<%=data.pincode%>">
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="kilometersDriven">Kilometers Driven</label>
                                    <input type="text" name="kilometersDriven" class="form-control" id="kilometersDriven" value="<%=data.kilometersDriven%>">
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                <div class="form-group">
                                    <label for="vehicleRegNo">Vehicle RegNo</label>
                                    <input type="text" name="vehicleRegNo" class="form-control" id="vehicleRegNo" value="<%=data.vehicleRegNo%>">
                                </div>
                            </div>
                        </div>
    
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="text" name="price" class="form-control" id="price" value="<%=data.price%>">
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
                </form>
            </div>
        </div>
    </div>


