<!-- new arival -->
<div class="colorlib-shop">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center colorlib-heading">
                <h2><span>New Arrival</span></h2>
                <p>We love to tell our successful far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
            </div>
        </div>
        <div class="row">

            <% data.forEach(function(cars){ %>
                <div class="col-md-3 text-center">
                    <div class="product-entry">
                        <div class="product-img" style="background-image: url(<%=cars.carImage1%>);">
                            <p class="tag"><span class="new">New</span></p>
                            <div class="cart">
                                <p>
                                    <span><a href="/view_details/<%=cars.id%>"><i class="icon-eye"></i></a></span> 
                                </p>
                            </div>
                        </div>
                        <div class="desc">
                            <h3><a><%=cars.model%></a></h3>
                            <p class="price"><span>Rs <%=cars.price%></span></p>
                        </div>
                    </div>
                </div>
            <%});%>
        </div>
    </div>
</div>

